		<div class="container">
			<div class="row mt">
				<div class="col-md-6 col-md-offset-3 centered">
					<h2>Stay In Contact</h2>
					<hr class="aligncenter">
					<h4>We Are Social People</h4>
					<p class="text28">
					<a href="#"><i class="ion-social-twitter big"></i></a>
					<a href="#"><i class="ion-social-instagram big"></i></a>
					<a href="#"><i class="ion-social-facebook big"></i></a>
					</p>
				</div><!-- /col-md-6-->
			</div><!--/row -->
		</div><!--/container -->
	</div><!--/g -->


