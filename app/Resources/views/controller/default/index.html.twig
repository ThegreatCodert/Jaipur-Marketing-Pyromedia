 #h {background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.3)),  url('{{ asset('img/header-hand-camera.jpg')}}') no-repeat;}
</style>
{% endblock stylesheetsCustom %}
		{% block heromsg %}Easily Connecting<br/>Influencers &amp; Brands{% endblock %}

		{% block herocta %}
			<div class="row">
				<div class="col-md-12">
					<div class="dropdown">
					  <a class="btn btn-lg btn-green dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					    <i class="ion-locked"></i>Get Started
