<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% if app.environment == 'node' %}
                <link rel="stylesheet" href="styles/custom-animation.css?no-rev"/>
                <link rel="stylesheet" href="styles/main.css?no-rev"/>
            {% else %}
                {% block stylesheetsDist %}
                <link rel="stylesheet" href="{{ asset('styles/custom-animation.css') }}"/>
                <link rel="stylesheet" href="{{ asset('styles/main.css') }}"/>
                {% endblock stylesheetsDist %}
            {% endif %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% if app.environment == 'node' %}
                <script type="text/javascript" src="scripts/config.js"></script>
                <script type="text/javascript" data-main="main" src="bower_components/requirejs/require.js"></script>
                
            {% else %}
                <script type="text/javascript" src="{{ asset('scripts/main.js') }}"></script>
            {% endif %}
        {% endblock %}
    </body>
</html>
